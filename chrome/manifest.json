{
  "name": "Facebook On Steroids",
  "version": "1.0",
  "description": "Customize everything about your facebook experience",
  "manifest_version": 2,
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*", "http://*.facebook.com/*"],
      "all_frames": false,
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
        "main.js",
        "modules/fos.js",
        "modules/helpers.js",
        "modules/commands.js",
        "modules/variables.js"
  ]
}