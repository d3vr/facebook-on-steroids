{
	"name": "Facebook On Steroids",
	"version": "1.0",
	"description": "Customize everything about your facebook experience",
	"manifest_version": 2,
	"permissions": ["storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["*://*.facebook.com/*"],
			"all_frames": false,
			"css": ["style.css"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
        "main.js",
        "modules/fos.js",
        "modules/fuse.js",
        "modules/helpers.js",
        "modules/choices.js",
        "modules/commands.js",
        "modules/tasks.js",
        "modules/constants.js"
	]
}